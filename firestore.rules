rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /conversations/{conversationId} {
      // Allow a user to read or update a conversation if they are a participant.
      allow read, update: if request.auth.uid in resource.data.participants;
      
      // Allow a user to create a conversation if they are including themselves as a participant.
      allow create: if request.auth.uid in request.resource.data.participants;

      match /messages/{messageId} {
        // Allow a user to read messages if they are a participant in the parent conversation.
        allow read: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        
        // Allow a user to create a message if they are a participant AND the sender is themselves.
        allow create: if request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants
                      && request.resource.data.senderId == request.auth.uid;
      }
    }
  }
}